{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://opentp.dev/schemas/dict.schema.json",
  "title": "OpenTrackPlan Dictionary",
  "description": "Schema for OpenTrackPlan dictionary files (.yaml)",
  "type": "object",
  "required": ["opentp", "dict"],
  "additionalProperties": false,
  "properties": {
    "opentp": {
      "$ref": "version.schema.json"
    },
    "dict": {
      "type": "object",
      "description": "Dictionary definition",
      "required": ["type", "values"],
      "additionalProperties": false,
      "oneOf": [
        {
          "properties": {
            "type": { "const": "string" },
            "values": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1,
              "uniqueItems": true
            }
          }
        },
        {
          "properties": {
            "type": { "const": "number" },
            "values": {
              "type": "array",
              "items": { "type": "number" },
              "minItems": 1,
              "uniqueItems": true
            }
          }
        },
        {
          "properties": {
            "type": { "const": "boolean" },
            "values": {
              "type": "array",
              "items": { "type": "boolean" },
              "minItems": 1,
              "uniqueItems": true
            }
          }
        }
      ]
    }
  }
}
