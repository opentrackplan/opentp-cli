{
  "name": "opentp",
  "version": "0.5.0",
  "specVersion": "2025-06",
  "description": "OpenTrackPlan CLI - validate and generate analytics tracking plans",
  "type": "module",
  "main": "dist/index.cjs",
  "bin": {
    "opentp": "./dist/index.cjs"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/opentrackplan/opentp-cli.git"
  },
  "homepage": "https://opentp.dev",
  "bugs": {
    "url": "https://github.com/opentrackplan/opentp-cli/issues"
  },
  "license": "Apache-2.0",
  "author": "Daniel Rachich",
  "keywords": [
    "analytics",
    "tracking",
    "tracking-plan",
    "schema",
    "validation",
    "events",
    "amplitude",
    "mixpanel",
    "google-analytics"
  ],
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "node ./esbuild/esbuild.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "lint:fix": "biome check --write src/",
    "format": "biome format --write src/",
    "prepublishOnly": "npm run build && npm run test",
    "compile:mac": "npx bun build src/cli.ts --compile --target=bun-darwin-arm64 --outfile releases/otp-mac",
    "compile:mac-intel": "npx bun build src/cli.ts --compile --target=bun-darwin-x64 --outfile releases/otp-mac-intel",
    "compile:linux": "npx bun build src/cli.ts --compile --target=bun-linux-x64 --outfile releases/otp-linux",
    "compile:win": "npx bun build src/cli.ts --compile --target=bun-windows-x64 --outfile releases/otp.exe",
    "compile": "mkdir -p releases && npm run compile:mac && npm run compile:mac-intel && npm run compile:linux && npm run compile:win",
    "release": "npm run compile"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@types/bun": "^1.2.5",
    "@types/node": "^20.11.30",
    "bun": "^1.3.5",
    "esbuild": "^0.25.8",
    "typescript": "^5.5.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "yaml": "^2.8.1"
  }
}
